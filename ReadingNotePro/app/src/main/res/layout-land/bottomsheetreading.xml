<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior"
    app:behavior_hideable="true"
    android:clipToPadding="true"
    android:id="@+id/bottomsheetreading">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:visibility="visible"
        android:elevation="10dp"
        android:id="@+id/smalllayout"
        android:background="#ffffff">

        <ImageView
            android:id="@+id/changeview"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_centerInParent="true"
            android:padding="2dp"
            android:src="@drawable/sreenrotateblack"/>
        <ImageView
            android:id="@+id/zoomout"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:src="@drawable/scrolltype"
            android:padding="2dp"
            android:layout_marginRight="90dp"
            android:layout_toLeftOf="@+id/changeview"/>
        <ImageView
            android:id="@+id/zoomin"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/zoomout"
            android:layout_marginRight="90dp"
            android:src="@drawable/nightmood"
            android:rotation="150"
            android:padding="2dp"/>
        <ImageView
            android:id="@+id/gointo"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_toRightOf="@+id/changeview"
            android:layout_centerInParent="true"
            android:src="@drawable/forwardpage"
            android:padding="1.2dp"
            android:layout_marginLeft="90dp"/>
        <ImageView
            android:id="@+id/writenote"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/gointo"
            android:layout_marginLeft="90dp"
            android:src="@drawable/ic_fountain_pen"
            android:padding="2dp"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="270dp"
        android:visibility="gone"
        android:id="@+id/largelayout"
        android:background="#cc000000">
        <ImageButton
            android:id="@+id/donewriting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/check"
            android:elevation="10dp"
            android:background="@drawable/stroking"
            android:layout_alignParentBottom="true"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/stroking"
            android:layout_alignParentBottom="true"
            android:id="@+id/readingcancel"
            android:visibility="gone"
            android:src="@drawable/canceling01"
            android:padding="10dp"/>
        <EditText
            android:id="@+id/readingnote"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@color/transperent"
            android:layout_above="@+id/donewriting"
            android:inputType="textMultiLine"
            android:scrollbars="vertical"
            android:elevation="10dp"
            android:paddingLeft="7dp"
            android:paddingStart="7dp"
            android:paddingTop="5dp"
            android:gravity="top"
            android:hint="Enter your Note here"
            android:textColorHint="#88ffffff"
            android:textColor="#ffffff"
            />
        <LinearLayout
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:visibility="invisible"
            android:orientation="vertical"
            android:layout_above="@+id/readingnote"
            android:background="#88ffffff"/>
        <EditText
            android:id="@+id/readingtitle"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/stroking"
            android:layout_above="@+id/divider"
            android:elevation="10dp"
            android:singleLine="true"
            android:gravity="left|center_vertical"
            android:paddingLeft="7dp"
            android:paddingStart="7dp"
            android:textColor="#ffffff"
            android:hint="Enter Title here"
            android:textColorHint="#88ffffff"/>

    </RelativeLayout>

</RelativeLayout>